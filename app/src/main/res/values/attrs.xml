<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Case">
        <attr name="row" format="integer" />
        <attr name="column" format="integer" />
        <attr name="possible_pos" format="boolean"/>

        <attr name="case_color" format="enum">
            <enum name="white_color" value="0"/>
            <enum name="black_color" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Board">

        <attr name="nb_row" format="integer"/>
        <attr name="nb_column" format="integer"/>

        <attr name="white_case_color" format="reference" />
        <attr name="black_case_color" format="reference" />
        <attr name="selection_case_color" format="reference" />
        <attr name="confirmation_case_color" format="reference" />
        <attr name="eat_case_color" format="reference" />

    </declare-styleable>

    <attr name="colorPrimaryVariantDark" format="reference"/>
    <attr name="colorOnPrimaryVariant" format="reference"/>
    <attr name="colorOnSecondaryVariant" format="reference"/>
    <attr name="colorTertiaryVariant" format="reference"/>
    <attr name="fontFamilyVariant" format="reference"/>
    <attr name="colorBGStartScreen" format="reference"/>


    <!--FOR THE GAME LAYOUT-->
    <attr name="GameMainColor" format="reference"/>
    <attr name="GameSecondColor" format="reference"/>
    <attr name="GameColorPlayerTurn" format="reference"/>
    <attr name="menaced_case_color" format="reference"/>
    <attr name="changePiece_bgColorScreen" format="reference"/>
    <attr name="changePiece_textColor" format="reference"/>

    <attr name="colorTextIndicatorBoard" format="reference"/>

    <attr name="colorBorderTopFinishScreen" format="reference"/>
    <attr name="colorBorderBottomFinishScreen" format="reference"/>
    <attr name="colorTextTopBottomFinishScreen" format="reference"/>
    <attr name="colorTextFinishScreen" format="reference"/>
    <attr name="colorBGFinishScreen" format="reference"/>

</resources>