<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_menu_default" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">?attr/fontFamilyVariant</item>
        <item name="android:textSize">@dimen/txt_size_btn_menu</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:padding">@dimen/padding_btn_menu</item>
    </style>
    
    <style name="dialog_title">
        <item name="android:translationY">@dimen/dialog_title_translationY</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnSecondaryVariant</item>
        <item name="android:fontFamily">?attr/fontFamilyVariant</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
    </style>

    <style name="dialog_body">
        <item name="android:padding">@dimen/dialog_body_padding</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="dialog_btn_row">
        <item name="android:translationY">@dimen/dialog_btn_row_translationY</item>
    </style>

    <style name="dialog_btn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?attr/colorOnSecondaryVariant</item>
        <item name="android:fontFamily">?attr/fontFamilyVariant</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:minHeight">@dimen/dialog_btn_min_height</item>
    </style>

    <style name="profile_btn" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/common_margin</item>
        <item name="iconSize">@dimen/material_button_icon_size</item>
        <item name="iconTint">#FFF</item>
        <item name="iconTintMode">multiply</item>
    </style>
</resources>