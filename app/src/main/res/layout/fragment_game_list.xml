<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameListFragment"
    android:orientation="vertical"
    android:layout_margin="@dimen/fab_margin"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="@dimen/material_button_icon_size"
            android:layout_height="@dimen/material_button_icon_size"
            android:background="@android:color/transparent"
            android:contentDescription="@string/sync_content_description"
            android:src="@android:drawable/ic_input_add"
            app:tint="?attr/colorOnPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/material_button_icon_size"
            android:text="@string/game_list"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="?attr/colorOnSecondaryVariant"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <ImageButton
            android:id="@+id/syncButton"
            android:layout_width="@dimen/material_button_icon_size"
            android:layout_height="@dimen/material_button_icon_size"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_popup_sync"
            android:contentDescription="@string/sync_content_description" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/gameDescriptionReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

        </LinearLayout>

    </ScrollView>


</LinearLayout>